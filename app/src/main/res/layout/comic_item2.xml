<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/comic_item_bg">

        <ImageView
            android:id="@+id/imgTruyen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/txtTenTruyen"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/txtTenChap"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_above="@+id/txtTenTruyen"
            android:background="#A85B5B65"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txtTenTruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/radius_bottom"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="#000"
            android:textSize="10dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>