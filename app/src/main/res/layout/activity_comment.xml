<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent" android:layout_gravity="" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/cm_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3E0E0"
        android:paddingTop="10dp"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/cm_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/cm_comicname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/cd_back"
            android:text="Bình luận"
            android:textColor="@color/black"
            android:textSize="25dp" />
        <ImageView
            android:id="@+id/cm_new"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/plus"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <GridView
        android:id="@+id/cm_GridView"
        android:layout_below="@+id/cm_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>